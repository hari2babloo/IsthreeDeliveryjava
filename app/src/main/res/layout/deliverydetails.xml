<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#FFFFFF"
    android:gravity="center"
    android:orientation="vertical"
    tools:context="com.a3x3conect.isthreedelivery.Deliverydetails">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/spinner"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/logo"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/custname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/bluee"
            android:textStyle="bold"
            tools:text="Customer Name" />

        <TextView
            android:id="@+id/pickupdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView2"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:textColor="@color/bluee"
            android:textStyle="bold"
            tools:text="Pickupdate" />

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/location2"
            android:contentDescription="TODO" />

        <TextView
            android:id="@+id/adressdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/address"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="addressdata"
            android:textColor="@color/bluee"
            android:textSize="14sp" />

    </LinearLayout>


    <Spinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"


        android:gravity="center">

        <View
            android:id="@+id/id2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#FFDADADA" />

        <TableRow
            android:id="@+id/id3"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:layout_below="@+id/id2"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <ImageButton
                android:id="@+id/directions"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/nav"
                android:contentDescription="TODO" />

            <View
                android:layout_width="1dp"
                android:layout_height="90dp"
                android:layout_marginTop="10dp"
                android:background="#FFDADADA" />

            <ImageButton
                android:id="@+id/call"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:background="@drawable/call"
                android:contentDescription="TODO" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/id3"
            android:gravity="center">

            <Button
                android:id="@+id/cancel"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentTop="false"
                android:background="@drawable/roundcorner"
                android:text="Cancel Order"
                android:textColor="@color/cardview_light_background" />

            <Button
                android:id="@+id/submit"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentTop="false"
                android:layout_marginLeft="10dp"
                android:background="@drawable/bbkg"
                android:text="Next"
                android:textColor="@color/cardview_light_background" />
        </TableRow>
    </RelativeLayout>


</RelativeLayout>
