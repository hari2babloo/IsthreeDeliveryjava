<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".GiveDelivery">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Order Details"
            android:textColor="@color/bluee"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TableRow
            android:id="@+id/j"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8">

            <TextView
                android:id="@+id/jobid2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/border"
                android:gravity="left"
                android:paddingLeft="4dp"
                android:text="Job Id"
                android:textColor="@color/bluee"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jobid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="left|center"
                android:paddingLeft="4dp"
                android:text="Job Id"
                android:textColor="@color/bluee"
                android:textSize="12sp" />

        </TableRow>

        <TableRow
            android:id="@+id/c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/j">

            <TextView
                android:id="@+id/custid2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/border"
                android:gravity="left"
                android:paddingLeft="4dp"
                android:text="Customer ID"
                android:textColor="@color/bluee"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/custid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="left|center"
                android:paddingLeft="4dp"
                android:text="Customer ID"
                android:textColor="@color/bluee"
                android:textSize="12sp" />
        </TableRow>

        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="false"
            android:layout_below="@+id/c"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Item"
                android:textColor="@color/bluee"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noofpices"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Qty"
                android:textColor="@color/bluee"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cost"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price"
                android:textColor="@color/bluee"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cost2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amount"
                android:textColor="@color/bluee"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/head"
            android:layout_marginBottom="10dp"
            android:background="@color/bluee" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fishPriceList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head">


        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"

            android:layout_below="@+id/fishPriceList"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/tabl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false">


                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/grdtotal2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Clothes Count:"
                        android:textColor="@color/bluee"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/grdtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total Clothes Count"
                        android:textColor="@color/red"
                        android:textSize="20sp" />

                </TableRow>

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">


                    <TextView
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Amount:"
                        android:textColor="@color/bluee"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/btmtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textColor="@color/red"
                        android:textSize="20sp" />


                </TableRow>


                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/pendingbale"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Balance to pay:"
                        android:textColor="@color/bluee"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/baltopay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="baltopay"
                        android:textColor="@color/red"
                        android:textSize="20sp" />

                </TableRow>


                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/amountpaid2"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:text="Amount Paid:"
                        android:textColor="@color/bluee"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/amountpaid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amount paid"
                        android:textColor="@color/red"
                        android:textSize="20sp" />

                </TableRow>


            </TableLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30dp"
                android:layout_marginTop="15dp"
                android:gravity="center">

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:background="@drawable/roundcorner"
                    android:text="Cancel Order"
                    android:textColor="@color/cardview_light_background" />

                <Button
                    android:id="@+id/home"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/greenroundcorner"
                    android:text="Proceed"
                    android:textColor="@color/cardview_light_background" />

            </TableRow>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>
