<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".SummaryReport">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_margin="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="20dp"
            android:text="Summary Report"
            android:textColor="@color/bluee"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/editorder"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="5dp"
            android:text="EditOrder"
            android:textColor="@color/red"
            android:textStyle="bold" />

        <TableRow
            android:id="@+id/j"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView8">

            <TextView
                android:id="@+id/jobid2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/border"
                android:gravity="left"
                android:paddingLeft="4dp"
                android:text="Job Id"
                android:textColor="@color/bluee"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/jobid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="left|center"
                android:paddingLeft="4dp"
                android:text="Job Id"
                android:textColor="@color/bluee"
                android:textSize="12sp" />

        </TableRow>

        <TableRow
            android:id="@+id/c"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/j">

            <TextView
                android:id="@+id/custid2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1.5"
                android:background="@drawable/border"
                android:gravity="left"
                android:paddingLeft="4dp"
                android:text="Customer ID"
                android:textColor="@color/bluee"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/custid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="left|center"
                android:paddingLeft="4dp"
                android:text="Customer ID"
                android:textColor="@color/bluee"
                android:textSize="12sp" />
        </TableRow>

        <TableRow
            android:id="@+id/dat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/c">

            <TextView
                android:id="@+id/date2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1.5"
                android:background="@drawable/border"
                android:gravity="left"
                android:paddingLeft="4dp"
                android:text="Pickup Date"
                android:textColor="@color/bluee"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/border"
                android:gravity="left|center"
                android:paddingLeft="4dp"
                android:text="Date"
                android:textColor="@color/bluee"
                android:textSize="12sp" />

        </TableRow>

        <LinearLayout
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dat"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/item"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Item"
                android:textColor="@color/bluee"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noofpices"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Qty"
                android:textColor="@color/bluee"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cost"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Price"
                android:textColor="@color/bluee"
                android:textSize="12sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cost2"
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Amount"
                android:textColor="@color/bluee"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

        <View
            android:id="@+id/v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/head"
            android:layout_marginBottom="10dp"
            android:background="@color/bluee" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/fishPriceList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/head">



        </android.support.v7.widget.RecyclerView>

        <View
            android:id="@+id/v2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/fishPriceList"
            android:layout_marginBottom="10dp"
            android:background="@color/bluee" />

        <LinearLayout
            android:id="@+id/weight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/v2">


            <EditText
                android:id="@+id/weight2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Weight in Kgs"
                android:inputType="numberDecimal" />

            <Button
                android:id="@+id/washbtn"
                android:layout_width="35dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/bbkg"
                android:text="update"
                android:textColor="@color/ic_launcher_background" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_alignParentBottom="true"
            android:layout_below="@+id/weight"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:orientation="vertical">

            <TableLayout
                android:id="@+id/layouttxt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/weighttxt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Weight txt"
                        android:textColor="@color/bluee"
                        android:textSize="10sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/weightperkg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Weight txt"
                        android:textColor="@color/bluee"
                        android:textSize="10sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/washingcost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Washing Cost"
                        android:textColor="@color/bluee"
                        android:textSize="10sp" />

                </TableRow>

            </TableLayout>

            <TableLayout
                android:id="@+id/tabl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false">


                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentBottom="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/expresmsg"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Express Charges"
                        android:textColor="@color/bluee"
                        android:textSize="10sp" />

                </TableRow>



                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/deliverontxt"
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Deliver on Hanger"
                        android:textColor="@color/bluee"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/hangerstatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:text="Status"
                        android:textColor="@color/bluee"
                        android:textSize="10sp" />

                </TableRow>
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/grdtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Amount"
                        android:textColor="@color/bluee"
                        android:textSize="15sp" />

                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Total Clothes Count"
                        android:textColor="@color/bluee"
                        android:textSize="15sp" />


                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">


                    <TextView
                        android:id="@+id/btmtotal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="00"
                        android:textColor="@color/red"
                        android:textSize="24sp" />
                </TableRow>

            </TableLayout>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:gravity="center">

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:background="@drawable/roundcorner"
                    android:text="Cancel Order"
                    android:textColor="@color/cardview_light_background" />

                <Button
                    android:id="@+id/home"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/bbkg"
                    android:text="Confirm Order"
                    android:textColor="@color/cardview_light_background" />

            </TableRow>

            <TextView
                android:id="@+id/btmamt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="You can update your options from Enter order menu"
                android:textColor="@color/bluee"
                android:textSize="12sp"
                android:visibility="gone" />


        </LinearLayout>
    </RelativeLayout>
</ScrollView>