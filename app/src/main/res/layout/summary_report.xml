<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    tools:context=".SummaryReport">

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Summary Report"
        android:textColor="@color/bluee"
        android:textSize="18sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:orientation="horizontal">




        <TextView
            android:id="@+id/item"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Item"
            android:textColor="@color/bluee"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/noofpices"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Qty"
            android:textColor="@color/bluee"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cost"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Price"
            android:textColor="@color/bluee"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/cost2"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Amount"
            android:textColor="@color/bluee"
            android:textSize="12sp"
            android:textStyle="bold" />

    </LinearLayout>

    <View
        android:id="@+id/v"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/head"
        android:layout_marginBottom="10dp"
        android:background="@color/bluee" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fishPriceList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/head">


    </android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"

        android:layout_below="@+id/fishPriceList"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <TableLayout
            android:id="@+id/tabl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:nestedScrollingEnabled="false">


            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:gravity="center">

                <TextView
                    android:id="@+id/grdtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Amount"
                    android:textColor="@color/bluee"
                    android:textSize="15sp" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Total Clothes Count"
                    android:textColor="@color/bluee"
                    android:textSize="15sp" />


            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">


                <TextView
                    android:id="@+id/btmtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="00"
                    android:textColor="@color/red"
                    android:textSize="24sp" />
            </TableRow>

        </TableLayout>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/cancel"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:background="@drawable/roundcorner"
                android:text="Cancel Order"
                android:textColor="@color/cardview_light_background" />

            <Button
                android:id="@+id/home"
                android:layout_width="120dp"
                android:layout_height="35dp"
                android:layout_margin="5dp"
                android:background="@drawable/bbkg"
                android:text="Confirm Order"
                android:textColor="@color/cardview_light_background" />

        </TableRow>

        <TextView
            android:id="@+id/btmamt2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="You can update your options from Enter order menu"
            android:textColor="@color/bluee"
            android:textSize="12sp"
            android:visibility="gone" />


    </LinearLayout>
</RelativeLayout>
