<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:id="@+id/swipe_container"
    android:layout_marginBottom="10dp"
    tools:context=".ExpressOrders">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_margin="10dp"
            android:background="#FFFFFF"
            android:gravity="top|center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="false"
                android:layout_marginTop="10dp"
                android:background="@drawable/logo" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_alignParentBottom="true"
            android:gravity="bottom|center">


            <View
                android:id="@+id/view2"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#FFDADADA" />

            <TableRow
                android:id="@+id/list"

                android:layout_width="match_parent"

                android:layout_height="wrap_content"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/exprespickups"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="?selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:theme="@style/AppTheme.GreenRipple"
                    app:srcCompat="@drawable/express_ickup" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="1dp"
                    android:layout_height="150dp"
                    android:background="#FFDADADA" />

                <ImageButton
                    android:id="@+id/expressdeliveries"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="?selectableItemBackground"
                    android:scaleType="fitCenter"
                    android:theme="@style/AppTheme.GreenRipple"
                    app:srcCompat="@drawable/express_delivery" />

            </TableRow>

            <View
                android:id="@+id/id23"
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/list"
                android:layout_marginBottom="20dp"
                android:background="#FFDADADA" />

        </RelativeLayout>

    </RelativeLayout>

</android.support.v4.widget.SwipeRefreshLayout>
